#include "samplax"

enum {
  TEAM_ONE    = 0,
  TEAM_TWO    = 1
};

public OnPlayerSpawn (playerid)
{
  if (player.Team(playerid) == TEAM_ONE) {
    printf "Team %d: %d", playerid, TEAM_ONE;
  }
  elif (player.Team(playerid) == TEAM_TWO) {
    printf "Team %d: %d", playerid, TEAM_TWO;
  }

  return 1;
}
